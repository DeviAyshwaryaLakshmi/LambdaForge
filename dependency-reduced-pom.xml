<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.example</groupId>
  <artifactId>graalvm-log-analyzer-lambda</artifactId>
  <version>1.0-SNAPSHOT</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.6.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>com.formkiq.lambda.runtime.graalvm.LambdaRuntime</mainClass>
                </transformer>
              </transformers>
              <shadedArtifactAttached>true</shadedArtifactAttached>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.graalvm.buildtools</groupId>
        <artifactId>native-maven-plugin</artifactId>
        <version>0.10.6</version>
        <extensions>true</extensions>
        <executions>
          <execution>
            <id>build-native</id>
            <phase>package</phase>
            <goals>
              <goal>compile-no-fork</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <skip>false</skip>
          <imageName>native-lambda</imageName>
          <buildArgs>
            <buildArg>--no-fallback</buildArg>
            <buildArg>--enable-url-protocols=http</buildArg>
            <buildArg>--initialize-at-run-time=io.netty,org.slf4j</buildArg>
            <buildArg>-H:ReflectionConfigurationFiles=src/main/resources/reflect-config.json</buildArg>
          </buildArgs>
          <classpath>
            <param>${project.build.directory}/${project.build.finalName}-shaded.jar</param>
          </classpath>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <properties>
    <maven.compiler.target>21</maven.compiler.target>
    <java.version>11</java.version>
    <maven.compiler.source>21</maven.compiler.source>
    <graalvm.home>/opt/graalvm</graalvm.home>
  </properties>
</project>
